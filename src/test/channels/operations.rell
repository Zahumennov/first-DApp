function test_connect_member_to_channel() {
    rell.test.tx()
        .op(create_user(alice_name, alice))
        .op(create_user("Bob", bob))
        .run();

    rell.test.tx()
        .op(top_up_user_balance(alice, 10))
        .sign(admin)
        .run();
    
    rell.test.tx()
        .op(register_channel(alice, "Alice chan 1"))
        .sign(alice_kp)
        .run();

    rell.test.tx()
        .op(connect_member_to_channel(channel_arguments))
        .sign(alice_kp)
        .run();

    assert_equals(channel_member @ { } (@sum 1), 2);
}

